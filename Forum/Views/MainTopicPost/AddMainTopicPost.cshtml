@model Forum.Models.ViewModels.MainTopicPostViewModel

    @*<div>
        <a asp-action="AddMainTopicPost">AddMainTopicPost</a>
    </div>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMainTopicPost" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MainTopicsIdFK" class="control-label"></label>
                <input asp-for="MainTopicsIdFK" class="form-control" />
                <span asp-validation-for="MainTopicsIdFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicIcon" class="control-label"></label>
                <input asp-for="Graphics" class="form-control" />
                <span asp-validation-for="Graphics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                @Html.Raw((Model == null ? System.DateTime.Now.ToString("yyyy/MM/dd HH:mm") : Model.CreatedDate == null ? System.DateTime.Now.ToString("yyyy/MM/dd HH:mm") : Model.CreatedDate.Value.ToString("yyyy/MM/dd HH:mm")))
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastUpdatedDate" class="control-label"></label>
                @Html.Raw((Model == null ? System.DateTime.Now.ToString("yyyy/MM/dd HH:mm") : Model.LastUpdatedDate == null ? System.DateTime.Now.ToString("yyyy/MM/dd HH:mm") : Model.LastUpdatedDate.Value.ToString("yyyy/MM/dd HH:mm")))
                <span asp-validation-for="LastUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastUpdatedBy" class="control-label"></label>
                <input asp-for="LastUpdatedBy" class="form-control" />
                <span asp-validation-for="LastUpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <div class="form-control">
                    @Html.Raw(Model == null ? "New" : Model.Status.ToString())
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllMainTopicPost">GetAllMainTopicPost</a>
</div>

