@model Forum.Models.ViewModels.LoginViewModel
@using Microsoft.Extensions.Options
@inject IOptions<Forum.Common.AppSettings> GooglereCaptcha
@{
    ViewData["Title"] = "Login";
}


<h1>Login</h1>


<hr />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" />
<style>
    .container i {
        margin-left: -30px;
        cursor: pointer;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="text" ID="Email"
                       runat="server" name="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" ID="Password" placeholder="Password" TextMode="Password"
                       runat="server" name="Password" required />
                <i id="togglePassword" class="fa fa-eye"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <input asp-for="Token" class="form-control" type="hidden" />
                </div>*@
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ForgotPassword">Forgot Password?</a>
</div>
<br />
<br />
<div>
    <a asp-action="Register">
        Click here to register.
    </a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
